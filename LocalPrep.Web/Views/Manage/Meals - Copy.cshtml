@model List<LocalPrep.Web.Models.data>
@{
    ViewBag.Title = "Meals";
    //ViewBag.Span = Html.ActionLink("Add Meal", "EditMeal", "Manage");
    ViewBag.Span = Html.ActionLink("Add Meal", "AddMeal", "Manage");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="loader-container" style="display:none">
    <div class="loader"></div>
</div>
@if (Model.Count == 0)
{
    <p>
        There are no meals associated with this account.  Please add a meal by clicking the link above.
    </p>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>Meal Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var meal in Model)
        {
    <tr>
        <td>
            @meal.name
        </td>
        <td>
            @Html.ActionLink("Edit", "EditMeal", "Manage", new { mealId = meal.id }, null)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteMeal", "Manage", new { mealId = meal.id }, null)
        </td>
    </tr>
        }
    </table>
}