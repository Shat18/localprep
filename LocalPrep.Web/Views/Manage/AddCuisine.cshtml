@model Cuisine
@{
    ViewBag.Title = "Add Cuisine";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage.Length > 0)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@if (ViewBag.FailureMessage != null && ViewBag.FailureMessage.Length > 0)
{
    <div class="alert alert-danger">@ViewBag.FailureMessage</div>
}

@using (Html.BeginForm("AddCuisine", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.CuisineName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CuisineName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-lp" value="Add Cuisine" />
        </div>
    </div>
}