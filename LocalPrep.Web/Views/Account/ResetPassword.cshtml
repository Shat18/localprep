@model LocalPrep.Web.Models.ResetPasswordViewModel

@{ ViewBag.Title = "Reset password";
    //ViewBag.Span = Html.ActionLink("Add Meal", "EditMeal", "Manage");
    //ViewBag.Span = Html.ActionLink("Add Meal", "AddMeal", "Manage");
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div class="shadow rounded p-4">
<div class="row justify-content-center mb-5">
    <div class="col-md-12 pb-5">
        @Html.AntiForgeryToken()
        @*<h4>Reset your password.</h4>
        <hr />*@
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)

        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
            <div class="col-md-12 mb-2">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>

       

        <div class="form-group row">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label" })
            <div class="col-md-12 mb-2">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
       

        <div class="form-group row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
            <div class="col-md-12 mb-2">
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-md-12 mb-2">
                <input type="submit" class="btn btn-default" value="Reset" />
            </div>
        </div>
    </div>
</div>
</div>}

