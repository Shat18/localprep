@model LocalPrep.Web.Models.ResponseHistoryOrders1
@{
    //ViewBag.Title = "CustomerDetail";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 dashboard-right">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
        <div class="p-5 w-100">

            <div class="mb-4 text24 fw-medium">
                <a class="me-4" href="@Url.Action("customers", "Admin")">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20.243" height="13.501" viewBox="0 0 20.243 13.501">
                        <path id="round-back" d="M15.216,11.51a.919.919,0,0,1,.007,1.294l-4.268,4.282H27.218a.914.914,0,0,1,0,1.828H10.955L15.23,23.2a.925.925,0,0,1-.007,1.294.91.91,0,0,1-1.287-.007L8.142,18.647h0a1.026,1.026,0,0,1-.19-.288.872.872,0,0,1-.07-.352.916.916,0,0,1,.26-.64l5.794-5.836A.9.9,0,0,1,15.216,11.51Z" transform="translate(-7.882 -11.252)" />
                    </svg>
                </a> Customers Detail
            </div>



            <div class=" content-box">
                <div class="row">

                    @{ Html.RenderAction("CustomerDetails", "Admin");}

                    <div class="col-md-8 col-lg-9 mb-5">
                        <div class="white-shadow h-100">
                            <div class="mx-5">
                                <ul class="nav nav-pills mb-3 top-tab-list" id="pills-tab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-1" type="button" role="tab" aria-controls="pills-home" onclick="location.href='@Url.Action("CustomerDetail", "Admin", new {customer_id=Model.response.id })'" aria-selected="true">Active Order</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-2" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Order History</button>
                                    </li>

                                </ul>
                                <div class="tab-content" id="pills-tabContent">

                                    <div class="tab-pane fade show active" id="pills-1" role="tabpanel" aria-labelledby="pills-home-tab">
                                        <div class="mt-5">

                                            @*<div class="order-deail" style="display:none;">*@
                                            <div class="order-deail" style="display:none;">
                                                <div class="mb-4 text24 fw-medium">
                                                    <a href="#" class="me-4 back-list">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20.243" height="13.501" viewBox="0 0 20.243 13.501">
                                                            <path id="round-back" d="M15.216,11.51a.919.919,0,0,1,.007,1.294l-4.268,4.282H27.218a.914.914,0,0,1,0,1.828H10.955L15.23,23.2a.925.925,0,0,1-.007,1.294.91.91,0,0,1-1.287-.007L8.142,18.647h0a1.026,1.026,0,0,1-.19-.288.872.872,0,0,1-.07-.352.916.916,0,0,1,.26-.64l5.794-5.836A.9.9,0,0,1,15.216,11.51Z" transform="translate(-7.882 -11.252)" />
                                                        </svg>
                                                    </a> Orders list
                                                </div>


                                            </div>

                                            <div class="tab-pane fade show active" id="pills-1" role="tabpanel" aria-labelledby="pills-home-tab">
                                                <div class="mt-5">
                                                    <div class="border-bottom border-secondary pb-5 mb-5">
                                                        <div class="row gy-5">
                                                            @foreach (var Listdata in Model.response.data.Where(a => a.id == Model.response.HiddenId))
                                                            {
                                                                foreach (var mealList in Listdata.meals)
                                                                {
                                                                    <div class="row gy-5">
                                                                        <div class="col-md-4">
                                                                            <img src="@mealList.image" class="img-fluid w-100">
                                                                        </div>
                                                                        <div class="col-md-8">
                                                                            <div class="d-flex justify-content-between mb-4">
                                                                                <div class="fw-semi-blod">Meals for : @mealList.id</div>
                                                                                @*<div class="fw-medium text12 text-black-50">17 Feb 2022, 11:00 AM</div>*@
                                                                            </div>
                                                                            <div class="mb-5">
                                                                                @*<div class="badge rounded-5 bg-ye-light fw-medium">Appetizers</div>*@
                                                                                <div class="badge rounded-5 bg-ye-light fw-medium">@mealList.name</div>
                                                                                @*<div class="badge rounded-5 bg-ye-light fw-medium">Desert</div>*@
                                                                            </div>
                                                                            <div class="fw-bold mb-2 text18">Total <span class="fw-bold text-orange">@mealList.price</span></div>

                                                                            @{ Html.RenderAction("_customerdeliveryaddress", "Admin");}

                                                                            <div class="fw-semi-blod mb-2">Special Request</div>
                                                                            <p class="text14 mb-5">@mealList.description</p>

                                                                        </div>
                                                                    </div>
                                                                }

                                                            }
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                          



                                        </div>
                                    </div>

                                    <div class="tab-pane fade" id="pills-2" role="tabpanel" aria-labelledby="pills-profile-tab">
                                        <div class="mt-5">
                                            <div class="History-order">
                                                @{ Html.RenderAction("CustomerOrdersHistoryList", "Admin");}

                                            </div>



                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>




</main>



















