@model Cuisine
@{
    ViewBag.Title = "Edit Cuisine";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditCuisine", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.CuisineId)
    @Html.HiddenFor(m => m.CreateDt)

    <div class="form-group">
        @Html.LabelFor(m => m.CuisineName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CuisineName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2"></label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.IsActive)
                @Html.LabelFor(m => m.IsActive)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-lp" value="Edit Cuisine" />
        </div>
    </div>
}