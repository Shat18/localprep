@model Diet
@{
    ViewBag.Title = "Edit Diet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditDiet", "Manage", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.DietId)
    @Html.HiddenFor(m => m.CreateDt)
    @Html.HiddenFor(m => m.ImgSrc)

    <div class="form-group">
        @Html.LabelFor(m => m.DietShortName, new { @class = "col-md-12 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DietShortName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DietLongName, new { @class = "col-md-12 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DietLongName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DietDescription, new { @class = "col-md-12 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.DietDescription, new { @class = "form-control", rows = "6" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2"></label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.IsActive)
                @Html.LabelFor(m => m.IsActive)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.ImageFile, new { @class = "col-md-12 control-label" })
                @Html.TextBoxFor(m => m.ImageFile, new { @class = "form-control-file", @type = "file" })
            </div>
        </div>
        <div class="col-md-6">
            @if (Model.ImgSrc != string.Empty && Model.ImgSrc != null)
            {
                <p>
                    <strong>Current Image</strong>
                </p>
                <img src="@Model.ImgSrc" class="img-fluid" />
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-lp" value="Edit Diet" />
        </div>
    </div>
}