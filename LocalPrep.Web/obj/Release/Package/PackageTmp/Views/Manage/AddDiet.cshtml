@model Diet
@{
    ViewBag.Title = "Add Diet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage.Length > 0)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@if (ViewBag.FailureMessage != null && ViewBag.FailureMessage.Length > 0)
{
    <div class="alert alert-danger">@ViewBag.FailureMessage</div>
}

@using (Html.BeginForm("AddDiet", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.DietShortName, new { @class = "col-md-12 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DietShortName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DietLongName, new { @class = "col-md-12 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DietLongName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DietDescription, new { @class = "col-md-12 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.DietDescription, new { @class = "form-control", rows = "6" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ImageFile, new { @class = "col-md-12 control-label" })
        @Html.TextBoxFor(m => m.ImageFile, new { @class = "form-control-file", @type = "file" })
    </div>

    <div class="form-group">
        <label class="col-md-2"></label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.IsActive)
                @Html.LabelFor(m => m.IsActive)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-lp" value="Add Diet" />
        </div>
    </div>
}