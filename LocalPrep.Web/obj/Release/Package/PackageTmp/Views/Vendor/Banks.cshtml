@model List<BankAccount>
@{ ViewBag.Title = "Payments";
    ViewBag.Span = Html.ActionLink("Add Bank Account", "Earnings", "Account");
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }



@if (Model.Count > 0)
{
    foreach (var bankAccount in Model)
    {
<div class="row order-list">

    <div class="col-lg-12 mb-5">
        <div class="shadow p-5 rounded-bottom ">
            <div class="row">
                <div class="col-6 mb-4">
                    <div class="text16 font-weight-bold">@bankAccount.bank_name</div>
                </div>
                <div class="col-6 text-right mb-4">

                    <a href="@Url.Action("DeleteBankAccount", "Vendor",new { customerpaymentprofileid = bankAccount.customer_payment_profile_id })">
                        <i class="far fa-trash-alt"></i>
                    </a>
                </div>
                <div class="col-6">
                    <div class="text16 text-orange">
                        Routing Number: <span class="font-weight-700">
                            @bankAccount.routing_number
                        </span>
                    </div>
                </div>
                <div class="col-6 text-right">

                    <a href="@Url.Action("EditBanks", "Vendor",new { customerpaymentprofileid = bankAccount.customer_payment_profile_id })"><i class="far fa-edit"></i></a>

                </div>
            </div>

        </div>

    </div>



</div> }
}
else
{
@:There are not any Bank Account added yet.  Please add Bank Account by clicking <a href="@Url.Action("Earnings", "Account")">here</a>.
}




