@model LocalPrep.Web.Models.HelpRequest




@{ ViewBag.Title = "Help";
    //ViewBag.Span = Html.ActionLink("Add Bank Account", "Earnings", "Account");
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

@if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage.Length > 0)
{
<div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@if (ViewBag.FailureMessage != null && ViewBag.FailureMessage.Length > 0)
{
<div class="alert alert-danger">@ViewBag.FailureMessage</div>
}
<div class="col-lg-12 mb-5">
    <div class="shadow p-5 rounded-bottom ">

        @using (Html.BeginForm("SendMessage", "Vendor", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "frmSendMessage" }))
        {
<div class="loader-container" style="display:none">
    <div class="loader"></div>
</div> 

    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    

                <div class="form-group row">
                    @Html.LabelFor(m => m.subject, new { @class = "col-md-12 control-label" })

                    <div class="col-md-12 mb-4">
                        @Html.TextBoxFor(m => m.subject, new { @class = "form-control", @id = "txtsubject" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.message, new { @class = "col-md-12 control-label" })
                    <div class="col-md-12 mb-4">
                        @Html.TextAreaFor(m => m.message, new { @class = "form-control", rows = "8", @id = "txtmessage" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-lp" value="Send" id="btnSendMessage" />
                        @*<input type="submit" class="btn btn-lp" value="Edit Meal" />*@
                    </div>
                </div>
           }
    </div>

</div>





@section Scripts {
   
    <script>

        $('#btnSendMessage').on("click", function () {
        $(".loader-container").show();

        var form = jQuery("#frmSendMessage");
        var status = form.valid();
            if (status) {
                alert("Hoi");
                $('#txtsubject').empty();
                $('#txtmessage').empty();   
            
                $(".loader-container").hide();
                alert("Save Sucessfully");
        }
    });

    </script>
}