@model LocalPrep.Web.Models.responsedata

@{
    ViewBag.Title = "OrdersDetails";
}
<div class="container my-5">
    <h2 class="mb-4">Orders Details</h2>

@foreach(var meals in Model.Meals)
{
<div class="shadow p-5 mb-5">
    <div class="row ">
        <div class="col-md-4 mb-4 mb-md-0">
            <img src="@meals.image" class="img-fluid" />

        </div>
        <div class="col-md-8 mb-4 mb-md-0">
            <h3>
                @meals.name
            </h3>
            <p class="mb-4">
                @meals.description
            </p>
            <div>
                <div class="count-box">
                    @meals.quantity
                </div>
                <div class="price-text">
                    @meals.price
                </div>
            </div>
        </div>
    </div>
</div>
}
    
    


    <div class="text-right total-box mb-5">
        Total: <div class="price-text">
           @Model.total
        </div>
    </div>
    <div class="mb-5">
        <h3 class=" border-bottom pb-2 mb-4">
            Order Placement
        </h3>
